<script type="text/javascript">

function openForgotPwdDlg() {
	//$("#formConfirmRequest").validate().resetForm();
	$("#requestError").hide();
	$('#modalForgotPwd').modal('show');
	$("#requestOk").hide();
}
function openRegistrationPage(){
	$("name=loginform").action = "/registration";
	$("name=loginform").submit();
}
